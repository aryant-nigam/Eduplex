<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feepayment_background"
    android:padding="5dp"
    tools:context=".FeePayment">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="138dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="payment.json"></com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:id="@+id/paymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/baloo_da"
            android:padding="5dp"
            android:text="FEE PAYMENT"
            android:textColor="#F8F8F8"
            android:textSize="30sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/curved_entry_black"
        android:backgroundTint="#80494444"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/baloo_da"
            android:text="FEE STATEMENT"
            android:textAlignment="center"
            android:textColor="#f0abc1"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teacherOnLeaveTid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Registration Number"
                    android:textAlignment="textStart"
                    android:textColor="#94DDDE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Name"
                    android:textAlignment="textStart"
                    android:textColor="#94DDDE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Class"
                    android:textAlignment="textStart"
                    android:textColor="#94DDDE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Month"
                    android:textAlignment="textStart"
                    android:textColor="#94DDDE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Due Fee"
                    android:textAlignment="textStart"
                    android:textColor="#94DDDE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3dp"
                    android:text="Date"
                    android:textAlignment="textStart"
                    android:textColor="#94ddde"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3dp"
                    android:text="School UPI"
                    android:textColor="#94DDDE"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/registrationNumberPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="11901811"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/studentNamePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Aryant Nigam"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/studentClassPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="Xii-A"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/monthPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="JUNE"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dueFeePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3sp"
                    android:text="10500"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/datePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3dp"
                    android:text="30-06-2021"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schoolUPIPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/baloo_da"
                    android:padding="3dp"
                    android:text="UPI@childrens_123"
                    android:textAlignment="center"
                    android:textColor="#F7B4A7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/paynow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/curved_entry_white"
        android:fontFamily="@font/baloo_da"
        android:text=" pay now !!"
        android:padding="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#F7B4A7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statement" />

</androidx.constraintlayout.widget.ConstraintLayout>