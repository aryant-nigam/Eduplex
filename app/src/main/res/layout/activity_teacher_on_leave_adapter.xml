<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TeacherOnLeaveAdapter">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/listview_background_announcement"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/teacherOnLeaveIcon"
            android:layout_width="90dp"
            android:layout_height="match_parent"


            android:padding="2dp"
            tools:src="@drawable/teacher_onleave_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="0.6"
                    android:padding="2dp"
                    android:text="Tid : "
                    android:textColor="#195D7E"
                    android:textColorHint="#195D7E"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/baloo_da"/>

                <TextView
                    android:id="@+id/teacherOnLeaveTid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_da"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:hint="Tid"
                    android:padding="2dp"
                    android:textColor="#195D7E"
                    android:textColorHint="#195D7E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_da"
                    android:layout_margin="2dp"
                    android:layout_weight="0.6"
                    android:padding="2dp"
                    android:text="Name :"
                    android:textColor="#195D7E"
                    android:textColorHint="#195D7E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teacherOnLeaveTName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_da"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:hint="Teacher's Name"
                    android:padding="2dp"
                    android:textColor="#195D7E"
                    android:textColorHint="#195D7E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_da"
                    android:layout_margin="2dp"
                    android:layout_weight="0.6"
                    android:padding="2dp"
                    android:text="Message :"
                    android:textColor="#0B0104"
                    android:textColorHint="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teacherOnLeaveMessage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_da"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:hint="Message "
                    android:padding="2dp"
                    android:textColor="#D33064"
                    android:textColorHint="#D33064"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>