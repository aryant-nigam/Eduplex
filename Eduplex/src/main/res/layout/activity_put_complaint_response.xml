<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminpanel_bacground"
    tools:context=".PutComplaintResponse"
    android:orientation="vertical">

    <TextView
    android:id="@+id/textView21"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/baloo_da"
    android:text="PUT RESPONSE"
    android:textAlignment="center"
    android:textColor="@color/colorOrange"
    android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.7"
        android:background="@drawable/curved_entry_black"
        android:backgroundTint="@color/colorGrey"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/complaintTypeResponse"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:fontFamily="@font/baloo_da"
            android:hint="Type"
            android:textColor="@color/colorAqua"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/complaintDescriptionResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/baloo_da"
            android:hint="Description"
            android:textColor="@color/colorPink"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/complaintResponseResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1.5"
            android:background="@drawable/curved_entry_black"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:gravity="start|top"
            android:hint="Put Response Of Complaint"
            android:inputType="textMultiLine"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/putResponse"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="3dp"
            android:background="@drawable/curved_entry_white"
            android:fontFamily="@font/baloo_da"
            android:text="Put Response"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#F7B4A7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/revealAnonimity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/curved_entry_white"
            android:fontFamily="@font/baloo_da"
            android:text="Reveal Anonimity"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/colorAqua" />
    </LinearLayout>

</LinearLayout>