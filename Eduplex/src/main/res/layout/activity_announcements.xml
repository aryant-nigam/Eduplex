<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/announcement_background"
    tools:context=".Announcements"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_fileName="announcement.json">

        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:id="@+id/announcementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/baloo_da"
            android:padding="5dp"
            android:text="ANNOUNCEMENTS"
            android:textAlignment="center"
            android:textColor="#F8F8F8"
            android:textSize="27sp">

        </TextView>

    </LinearLayout>

    <ListView
        android:id="@+id/announcementList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!--<com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcementList"
        app:lottie_autoPlay="true"
        app:lottie_fileName="puzzle.json"
        app:lottie_loop="true"></com.airbnb.lottie.LottieAnimationView>-->

</LinearLayout>